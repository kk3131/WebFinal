@model List<FinalTest_02.Models.Order>
@using System.Linq

@{
    ViewData["Title"] = "訂單列表";
    var unpaidOrders = Model.Where(o => o.Status != "已付款").ToList();
    var paidOrders = Model.Where(o => o.Status == "已付款").ToList();
}

<h2>訂單列表</h2>

@if (TempData["Message"] != null)
{
    <div class="alert alert-info">
        @TempData["Message"]
    </div>
}

<h4 class="text-danger">未付款訂單</h4>
@if (unpaidOrders.Any())
{
    <form asp-action="Checkout" method="get" id="checkoutForm">
        @Html.AntiForgeryToken()
        <table class="table table-bordered table-striped">
            <tbody>
                @foreach (var order in unpaidOrders)
                {
                    if (order.OrderDetails != null && order.OrderDetails.Any())
                    {
                        <tr>
                            <td colspan="6">
                                <strong>訂單日期：</strong> @order.OrderDate.ToString("yyyy-MM-dd HH:mm:ss")
                                <table class="table table-sm table-bordered mt-2">
                                    <thead>
                                        <tr>
                                            <th>選取</th>
                                            <th>商品名稱</th>
                                            <th>甜度</th>
                                            <th>冰塊</th>
                                            <th>單價</th>
                                            <th>數量</th>
                                            <th>調整數量</th>
                                            <th>操作</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var detail in order.OrderDetails)
                                        {
                                            <tr>
                                                <td>
                                                    <input type="checkbox"
                                                           name="selectedDetailIds"
                                                           value="@detail.Id"
                                                           class="detail-checkbox"
                                                           data-id="@detail.Id"
                                                           data-price="@detail.UnitPrice"
                                                           form="checkoutForm" />
                                                </td>
                                                <td>@detail.Product.Name</td>
                                                <td>@detail.Sweetness</td>
                                                <td>@detail.Ice</td>                                                
                                                <td>@detail.UnitPrice.ToString("NT$#,0")</td>
                                                <td class="current-quantity" data-id="@detail.Id">@detail.Quantity</td>
                                                <td>
                                                    <div class="d-flex align-items-center">
                                                        <input type="number"
                                                               class="form-control quantity-input me-2"
                                                               data-id="@detail.Id"
                                                               data-price="@detail.UnitPrice"
                                                               value="@detail.Quantity"
                                                               min="1"
                                                               style="width: 80px;" />
                                                        <span class="status-message" id="status-@detail.Id" style="min-width: 60px;"></span>
                                                    </div>
                                                </td>
                                                <td>
                                                    <button type="button"
                                                            class="btn btn-sm btn-danger delete-button"
                                                            data-id="@detail.Id"
                                                            data-orderid="@order.Id">
                                                        刪除
                                                    </button>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>

        <div class="text-end mt-3 me-2">
            <strong id="totalAmountText" style="font-size: 18px;">總金額：NT$ 0</strong>
        </div>

        <div class="text-center mt-2">
            <button type="submit" class="btn btn-primary btn-lg">結帳</button>
        </div>
    </form>
}
else
{
    <p class="text-muted">目前沒有未付款的訂單。</p>
}

<hr />

<h4 class="text-success mt-5">已付款訂單</h4>
@if (paidOrders.Any())
{
    <table class="table table-bordered table-striped">
        <tbody>
            @foreach (var order in paidOrders)
            {
                if (order.OrderDetails != null && order.OrderDetails.Any())
                {
                    <tr>
                        <td colspan="6">
                            <strong>訂單日期：</strong> @order.OrderDate.ToString("yyyy-MM-dd HH:mm:ss")
                            <table class="table table-sm table-bordered mt-2">
                                <thead>
                                    <tr>
                                        <th>商品名稱</th>
                                        <th>甜度</th>
                                        <th>冰塊</th>
                                        <th>數量</th>
                                        <th>備註</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var detail in order.OrderDetails)
                                    {
                                        <tr>
                                            <td>@detail.Product.Name</td>
                                            <td>@detail.Sweetness</td>
                                            <td>@detail.Ice</td>
                                            <td>@detail.Quantity</td>
                                            <td class="text-muted">已結帳</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
}
else
{
    <p class="text-muted">目前沒有已付款的訂單。</p>
}

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        function calculateTotal() {
            let total = 0;

            $(".detail-checkbox:checked").each(function () {
                const id = $(this).data("id");
                const price = parseFloat($(this).data("price"));
                const quantity = parseInt($(".quantity-input[data-id='" + id + "']").val());

                total += price * quantity;
            });

            $("#totalAmountText").text("選取商品總金額：NT$ " + total.toFixed(0));
        }

                      $(".delete-button").on("click", function () {
            const button = $(this);
            const detailId = button.data("id");
            const token = $('input[name="__RequestVerificationToken"]').val();

            if (!confirm("確定要刪除這個商品嗎？")) return;

            $.ajax({
                url: '/Orders/DeleteDetail',
                type: 'POST',
                data: {
                    orderDetailId: detailId,
                    __RequestVerificationToken: token
                },
                success: function () {
                    const row = button.closest("tr"); // 當前商品那一列
                    const orderTable = row.closest("table.table-sm"); // 整張商品表格
                    const orderContainer = orderTable.closest("tr");  // 外層包住訂單日期 + 商品表的 tr

                    row.fadeOut(300, function () {
                        row.remove();

                        // 如果該筆訂單底下所有商品都被刪光，就連訂單一起移除
                        if (orderTable.find("tbody tr").length === 0) {
                            orderContainer.fadeOut(300, function () {
                                orderContainer.remove();
                            });
                        }

                        calculateTotal(); // 重新計算金額
                    });
                },
                error: function () {
                    alert("刪除失敗，請稍後再試！");
                }
            });
        });



                $(document).ready(function () {
            $(".quantity-input").on("change", function () {
                const input = $(this);
                const id = input.data("id");
                const quantity = input.val();
                const statusSpan = $("#status-" + id);
                const token = $('input[name="__RequestVerificationToken"]').val();

                if (quantity < 1) {
                    alert("數量不能小於 1");
                    input.val(1);
                    return;
                }

                statusSpan.text("更新中...").css("color", "#888");

                $.ajax({
                    url: '/Orders/ChangeQuantity',
                    type: 'POST',
                    data: {
                        orderDetailId: id,
                        newQuantity: quantity,
                        __RequestVerificationToken: token
                    },
                    success: function () {
                        $(".current-quantity[data-id='" + id + "']").text(quantity);
                        statusSpan.html("✅").css("color", "green");
                        setTimeout(() => {
                            statusSpan.fadeOut(300, () => statusSpan.text("").show());
                        }, 1200);
                        calculateTotal();
                    },
                    error: function () {
                        statusSpan.html("❌").css("color", "red");
                    }
                });
            });

            $(".quantity-input").on("keydown", function (e) {
                if (e.key === "Enter") {
                    e.preventDefault(); // ✅ 避免按 Enter 觸發結帳
                }
            });

            $(".detail-checkbox").on("change", calculateTotal);
            $(".quantity-input").on("input", calculateTotal); // 即時加總
        });

    </script>
}
