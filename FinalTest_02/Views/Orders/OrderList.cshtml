@model List<FinalTest_02.Models.Order>
@using System.Linq

@{
    ViewData["Title"] = "訂單列表";
}

<h2>訂單列表</h2>

@if (TempData["Message"] != null)
{
    <div class="alert alert-info">
        @TempData["Message"]
    </div>
}

<form asp-action="Checkout" method="get" id="checkoutForm">
    <table class="table table-bordered table-striped">
        <tbody>
            @foreach (var order in Model)
            {
                if (order.OrderDetails != null && order.OrderDetails.Any())
                {
                    <tr>
                        <td colspan="6">
                            <strong>訂單狀態：</strong> @(string.IsNullOrEmpty(order.Status) ? "未付款" : order.Status)
                            <table class="table table-sm table-bordered mt-2">
                                <thead>
                                    <tr>
                                        <th>選取</th>
                                        <th>商品名稱</th>
                                        <th>甜度</th>
                                        <th>冰塊</th>
                                        <th>數量</th>
                                        <th>調整數量</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var detail in order.OrderDetails)
                                    {
                                        <tr>
                                            <td>
                                                @if (order.Status != "已付款")
                                                {
                                                    <input type="checkbox" name="selectedDetailIds" value="@detail.Id" form="checkoutForm" />
                                                }
                                                else
                                                {
                                                    <span class="text-muted">✓</span>
                                                }
                                            </td>
                                            <td>@detail.Product.Name</td>
                                            <td>@detail.Sweetness</td>
                                            <td>@detail.Ice</td>
                                            <td>@detail.Quantity</td>
                                            <td>
                                                @if (order.Status != "已付款")
                                                {
                                                    <form asp-action="ChangeQuantity" method="post" style="display:inline">
                                                        <input type="hidden" name="orderDetailId" value="@detail.Id" />
                                                        <input type="hidden" name="change" value="1" />
                                                        <button type="submit" class="btn btn-success btn-sm">＋</button>
                                                    </form>
                                                    <form asp-action="ChangeQuantity" method="post" style="display:inline">
                                                        <input type="hidden" name="orderDetailId" value="@detail.Id" />
                                                        <input type="hidden" name="change" value="-1" />
                                                        <button type="submit" class="btn btn-danger btn-sm">－</button>
                                                    </form>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">已結帳</span>
                                                }
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>

    <!-- ✅ 結帳按鈕 -->
    <div class="text-center mt-4">
        <button type="submit" class="btn btn-primary btn-lg">結帳</button>
    </div>
</form>

<script src="~/js/site.js"></script>
