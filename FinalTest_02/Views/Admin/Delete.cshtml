@model FinalTest_02.Models.AdminUserViewModel

@{
    ViewData["Title"] = "刪除使用者確認";
}

<h2>刪除使用者確認</h2>

<div>
    <h4>你確定要刪除下列使用者？</h4>
    <dl class="row">
        <dt class="col-sm-2">帳號</dt>
        <dd class="col-sm-10">@Model.UserName</dd>

        <dt class="col-sm-2">姓名</dt>
        <dd class="col-sm-10">@Model.Name</dd>

        <dt class="col-sm-2">地址</dt>
        <dd class="col-sm-10">@Model.Address</dd>

        <dt class="col-sm-2">Email</dt>
        <dd class="col-sm-10">@Model.Email</dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">刪除</button>
        <a asp-action="Index" class="btn btn-secondary">取消</a>
    </form>
</div>
